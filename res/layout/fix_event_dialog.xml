<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ev_nombre" android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dia:"
            android:textSize="24sp"
            android:id="@+id/textView" android:layout_below="@+id/ev_nombre" android:layout_alignParentLeft="true"/>
    <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ev_dia_spinner" android:layout_below="@+id/ev_nombre" android:layout_toRightOf="@+id/textView"
            android:spinnerMode="dropdown" android:layout_alignBottom="@+id/textView"/>



</RelativeLayout>