<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">


    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="16:00 - 17:30"
            android:id="@+id/dialog_time"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/dialog_title"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:minLines="3"
            android:text="Descripción larga\nMultilinea y demás"
            android:id="@+id/dialog_descr"
            android:layout_below="@+id/dialog_time"
            android:layout_alignLeft="@+id/dialog_time"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/dialog_icon" android:layout_toStartOf="@+id/dialog_icon"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:id="@+id/dialog_delete"
            android:background="#cc0000"
            android:layout_below="@+id/dialog_descr"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_trash"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingenieria de Software"
            android:textColor="#000000"
            android:textSize="24sp"
            android:height="48dp"
            android:gravity="center"
            android:background="#32f478"
            android:id="@+id/dialog_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentRight="true"/>
    <ImageView
            android:layout_width="86dp"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_icon" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:layout_below="@+id/dialog_title"
            android:src="@drawable/ic_coolpine" android:layout_alignBottom="@+id/dialog_descr"/>


</RelativeLayout>